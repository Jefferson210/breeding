<p id="notice"><%= notice %></p>

<h1 class="alert alert-success text-center">Sowings</h1>

<div class="text-center">
    <h3><%= link_to 'New', new_sowing_path  %></h3>

</div>

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th>Origin</th>
            <th>Numseed</th>
            <th>Weight</th>
            <th>Week</th>
            <th>Hydratation</th>
            <th>Calendar</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @sowings.each do |sowing| %>
        <tr>
            <td><%= sowing.origin %></td>
            <td><%= sowing.numSeed %></td>
            <td><%= sowing.weight %></td>
            <td><%= sowing.week %></td>
            <td><%= sowing.hydratation %></td>
            <td><%= sowing.calendar %></td>
            <td><%= link_to 'Show', sowing %>
                
            </td>
            <td><%= link_to 'Edit', edit_sowing_path(sowing) %>

            </td>
            <td><%= link_to 'Delete', sowing, method: :delete, data: { confirm: 'Are you sure?' } %>

            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

